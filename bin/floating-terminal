#!/usr/bin/env bash

# Floating terminal helper
width=900
height=600

# Optional size args
if [[ "$1" =~ ^[0-9]+$ && "$2" =~ ^[0-9]+$ ]]; then
    width="$1"
    height="$2"
    shift 2
fi

if [ "$#" -eq 0 ]; then
    hyprctl dispatch exec "[float; size $width $height; center] uwsm-app -- xdg-terminal-exec -- $SHELL -il"
else
    hyprctl dispatch exec "[float; size $width $height; center] uwsm-app -- xdg-terminal-exec -- $SHELL -ilc \"$*\""
fi
