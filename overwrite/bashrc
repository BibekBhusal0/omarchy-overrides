alias nvimfzf='nvim $(fzf --preview="bat --color=always {}")'
alias nvimfzfm='nvim $(fzf -m --preview="bat --color=always {}")'
alias gcb='git branch | fzf --preview "git show --color=always {-1}" |
             cut -c 3- | xargs git checkout'
alias :q='exit'
alias eixt='exit'
alias exp='nautilus'
alias obd='xdg-open obsidian://daily;omarchy-launch-or-focus obsidian'

ov() {
    VAULT="$HOME/Documents/obsidian.md"
    cd "$VAULT" || return
    relative_file=$(fd --extension md --type file --strip-cwd-prefix | fzf --prompt="Vault search> ")
    [[ -z "$relative_file" ]] && return
    full_path="$VAULT/$relative_file"
    nohup obsidian "obsidian://open?path=$full_path" >/dev/null 2>&1 &
}

export PATH=$PATH:~/.spicetify
export PATH="$HOME/.tmuxifier/bin:$PATH"

eval "$(tmuxifier init -)"
