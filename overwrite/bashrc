# Overwriting some behaviours for default alias

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd -P)"
echo "Using Bash Shell"

source "$SCRIPT_DIR/../zsh/alias.sh"
source "$SCRIPT_DIR/../zsh/shell.sh"

bind -x '"\C-f": fzf-command'

src (){
  local file=${1:-~/.bashrc}
  if [[ -f $file ]]; then
    source "$file"
  fi
}
