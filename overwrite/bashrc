# Overwriting some behaviours for default alias

echo "Using Bash Shell"

fzf-command() {
  local cmd=$(compgen -c | fzf)
  if [[ -n $cmd ]]; then
    READLINE_LINE="$cmd"
    READLINE_POINT=${#READLINE_LINE}
  fi
}
bind -x '"\C-f": fzf-command'

src (){
  local file=${1:-~/.bashrc}
  if [[ -f $file ]]; then
    source "$file"
  fi
}
